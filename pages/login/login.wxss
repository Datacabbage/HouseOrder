.login{background:url(https://s1.ax1x.com/2018/07/31/Pd424I.jpg) no-repeat left bottom / 750rpx 1334rpx;height:1220rpx;padding:206rpx 90rpx 0;}
.section{display:flex;align-items:center;justify-content:center;border-bottom:1rpx solid #fff;}
.login image{width:44rpx;height:44rpx;}
.login input{height:120rpx;padding-left:46rpx;flex:1;color:#fff;font-size:34rpx;}
