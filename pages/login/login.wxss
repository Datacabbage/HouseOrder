.submit{background:#ff6446;color:#fff;font-size:36rpx;margin-top:162rpx;height:100rpx;line-height:100rpx;border-radius:10rpx;}
.submit::after{border:1px solid #ff6446;}
.control{display:flex;font-size:28rpx;color:#fff;margin-top:80rpx;}
.control navigator{flex:1;width:265rpx;height:95rpx;line-height:95rpx;background:rgba(255, 255, 255, .25);text-align:center;border-radius:48rpx;}
